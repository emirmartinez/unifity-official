<%- include('partials/header'); %>

    <main>
        <div class="ui segment">
        <!-- <div class="ui segment text container"> -->
            <h1 class="ui center aligned header">Welcome Back</h1> 
            <br>
            <div class="ui middle aligned center aligned grid text container">
                <div class="column">
                    <h2 class="ui image header">
                    <!-- <img src="assets/images/logo.png" class="image"> -->
                    <div class="content">
                        Login to your account
                    </div>
                    </h2>
                    <form class="ui large form" method="post" action="/login">
                        <div class="ui stacked segment">
                            <div class="field">
                            <div class="ui left icon input">
                                <i class="user icon"></i>
                                <input type="email" name="email" placeholder="E-mail address">
                            </div>
                            </div>
                            <div class="field">
                            <div class="ui left icon input">
                                <i class="lock icon"></i>
                                <input type="password" name="password" placeholder="Password">
                            </div>
                            </div>
                            <input class="ui fluid large black submit button" type="submit" value="Login">
                        </div>
                        <div class="ui error message"></div>
                    </form>
                    <div class="ui message">
                    New to us? <a href="/sign-up">Sign Up</a>
                    </div>
                    <br>
                    <%- message %>
                    <br>
                </div>
            </div>
        </div>
    </main>

    <footer >
        <%- include('partials/footer'); %>
    </footer>
    </body> 
</html>